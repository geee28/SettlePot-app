<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NonPayersPageSubevents"
    android:background="@drawable/sub_event_page_bg">


    <EditText
        android:id="@+id/NoOfNonPayers_subevents"
        android:layout_width="287dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="280dp"
        android:background="@drawable/roundedbutton"
        android:ems="10"
        android:hint="Enter number of non-payers"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#AB7A52"
        android:textColorHint="#AB7A52"

        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backbuttonnonpayers_subevents"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/backbutton"
        />

    <Button
        android:id="@+id/Continuenonpayerspage_subevents"
        android:layout_width="150dp"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#AB7A52"
        android:gravity="center"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        app:cornerRadius="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NoOfNonPayers_subevents" />

</androidx.constraintlayout.widget.ConstraintLayout>